#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
const int N = 1e5+5;
int arr[N];
int main()
{
    int n;
    cin>>n;
    for(int i=1; i<=n; i++){
        cin>>arr[i];
    }
    int q;
    cin>>q;
    int ans[n];
    ans[0]=0;
    ans[1]=arr[1];
    for(int i=2; i<=n; i++){
        ans[i]=ans[i-1]+arr[i];
    }
    /*for(int i=1; i<=n; i++){
        cout<<ans[i]<< " ";
    }*/
    while(q--){
        int l,r;
        cin>>l>>r;
        long long res = ans[r]-ans[l-1];
        cout<<res<<endl;
    }




}
